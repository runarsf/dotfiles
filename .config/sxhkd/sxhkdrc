# vim: set foldmethod=marker foldlevel=0 nomodeline:
super + Return
	"${TERMINAL}"

super + x
	gllock || i3lock

super + shift + x
	prompt "Are you sure you want to shutdown?" "shutdown -h now"

super + shift + v
	"${TERMINAL}" -e "${EDITOR}"

super + d
	dmenu_run -nb '#1e1e1e' -sf '#1e1e1e' -sb '#f4800d' -nf '#F4800d'
	#rofi -show run -lines 3 -eh 2

super + Escape
	pkill -USR1 -x sxhkd

alt + p
	sharenix-section -n -c

#super + o ; {w,e}
#	{"${BROWSER}","${EDITOR}"}
