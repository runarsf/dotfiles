# vim: set foldmethod=marker foldlevel=0 nomodeline:
# description: Launch terminal.
super + Return
	"${TERMINAL}"

super + x
	gllock || lock || i3lock-fancy || i3lock
#super + l
#	dm-tool lock

super + shift + x
	prompt "Are you sure you want to shutdown?" "shutdown -h now"

super + d
	rofi -show run
super + shift + d
	rofi -combi-modi window,drun -show combi -modi combi
super + Tab
	rofi -show window
super + shift + Tab
	rofi -show ssh

super + alt + e
	emoji

super + Escape
	pkill -USR1 -x sxhkd

alt + p
	sharenix-section -n -c

super + shift + c
	toggleprogram "picom" "-b"

super + shift + p
	curl "https://push.runarsf.dev/message?token=$(cat ~/.config/.gotifytoken)" -F "title=$(echo '' | rofi -lines 0 -dmenu -p 'Title')" -F "message=$(echo '' | rofi -lines 0 -dmenu -p 'Message')" -F "priority=$(echo '0\n1\n2\n3\n4\n5' | rofi -lines 6 -dmenu -p 'Priority')"

#super + shift + v
#	whim --editor "$EDITOR +startinsert" --terminal "$TERMINAL --class scratchpad -e"

super + o ; {v,w}
	{"${TERMINAL}" -e "${EDITOR}", \
	 "${BROWSER}"}
