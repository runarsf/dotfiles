# vim: set foldmethod=marker foldlevel=0 nomodeline:
super + Return
	$TERMINAL
super + x
	$HOME/bin/customlock.sh "gllock"
super + shift + x
	$HOME/bin/prompt.sh "Are you sure you want to shutdown?" "shutdown -h now"
super + shift + v
	$TERMINAL -e $EDITOR
super + d
	rofi -show run -lines 3 -eh 2
super + Tab
	rofi -show window
super + shift + w
	$BROWSER

# Restart sxhkd
super + Escape
	pkill -USR1 -x sxhkd

alt + p
	sharenix-section -n -c

# Insert < and >
ctrl + @comma
	xdotool keyup ctrl && xdotool key less && xdotool keydown ctrl
ctrl + @period
	xdotool keyup ctrl && xdotool key greater && xdotool keydown ctrl

#super + ctrl + @space
#	$HOME/bin/dvorak.sh toggle

#super + shift + n
	# 
#super + n
	#bspc node $DDTERMWID --flag hidden --focus $DDTERMWID.!hidden

# Window manager {{{

# close and kill
super + {_,shift + }q
	bspc node -{c,k}
	# {i3-msg ,x}kill
	#kill -9 $(xdotool getwindowfocus getwindowpid)

# Change workspace or move container to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}'
	# i3-msg {_,move container to }workspace number {1-9,0}
# Change focus or move container
super + alt + {Left,Right}
	desk=`bspc query -D -d focused`; \
	bspc desktop -m {prev,next}; \
	bspc monitor -f {prev,next}; \
	bspc desktop -f $desk
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
	# i3-msg {focus,move} {left,down,up,right}
# Resize window
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
	# pidof i3 && i3-msg resize {shrink width,grow height,shrink height,grow width} 10 px or 10 ppt
# Move window to monitor or focus the next/previous desktop in the current monitor
super + alt + shift + {Left,Right}
	bspc desktop -f {prev,next}.local
	# i3-msg move workspace to output {left,right}

#alt + Return
#	i3-msg workspace back_and_forth

# restart/reload/quit
super + shift + {r,i,e}
	bspc {wm -r,wm -r,quit}
	# i3-msg {restart,reload,exit}

# Toggle fullscreen
super + f
	bspc node -t \~fullscreen
	# i3-msg fullscreen toggle

super + @space
	bspc node -t \~floating

