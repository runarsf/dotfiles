# vim: set foldmethod=marker foldlevel=0 nomodeline:
# description: Launch terminal.
super + Return
	"${TERMINAL}"

super + x
	gllock || i3lock

super + shift + x
	prompt "Are you sure you want to shutdown?" "shutdown -h now"

super + d
	rofi -show run
	#dmenu_run -nb '#1e1e1e' -sf '#1e1e1e' -sb '#f4800d' -nf '#F4800d'
super + shift + d
	rofi -combi-modi window,drun -show combi -modi combi

super + alt + e
	emoji

super + Escape
	pkill -USR1 -x sxhkd

alt + p
	sharenix-section -n -c

super + shift + c
	toggleprogram "compton" "-b"

#super + shift + v
#	"${TERMINAL}" -e "${EDITOR}"

super + shift + v
	whim --editor "${EDITOR}" --terminal "${TERMINAL} --class scratchpad -e"

#super + o ; {w,e}
#	{"${BROWSER}","${EDITOR}"}
