super + Return
	"${TERMINAL}"

super + x
	betterlockscreen --lock dimblur --blur 8

super + shift + x
	prompt "Are you sure you want to shutdown?" "shutdown -h now"

super + d
	rofi -show
super + Tab
	rofi -show window -modi window

super + shift + Escape
	notify-send "sxhkd" "restarting..."; pkill -USR1 -x sxhkd

# https://github.com/runarsf/screenshot
alt + p
	screenshot -m region -t -c -o 'screenshot-xbackbone'
alt + shift + p
	screenshot -m region -c

super + shift + c
	toggleprogram picom --config "${HOME}/.config/picom.conf" -fcCGb --xrender-sync-fence

XF86Audio{LowerVolume,RaiseVolume}
	pactl set-sink-volume 2 {-,+}5%
XF86AudioMute
	amixer -q -D pulse sset Master toggle
XF86Audio{Next,Prev,Play,Stop}
	playerctl {next,previous,play-pause,stop}

# super + alt + b
# 	bwmenu --clear 8 --auto-lock 28800 -- -location 2
