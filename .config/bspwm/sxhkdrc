# vim: set foldmethod=marker foldlevel=0 nomodeline:
# bspwm-specific sxhkd config, extends ~/.config/sxhkd/sxhkdrc

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# Change workspace or move container to workspace
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '{1-9,10}'
# Change focus or move container
super + alt + {Left,Right}
	desk=`bspc query -D -d focused`; \
	bspc desktop -m {prev,next}; \
	bspc monitor -f {prev,next}; \
	bspc desktop -f $desk
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}
# Resize window
super + ctrl + {Left,Down,Up,Right}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}
# Move window to monitor or focus the next/previous desktop in the current monitor
super + alt + shift + {Left,Right}
	bspc desktop -f {prev,next}.local

# restart/reload/quit
super + shift + {r,i,e}
	bspc {wm -r,wm -r,quit}

# Toggle fullscreen
super + f
	bspc node -t \~fullscreen

super + @space
	bspc node -t \~floating

