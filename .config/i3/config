# Definitions
set $mod Mod4
set $hibernate sudo systemctl suspend
set $shutdown shutdown -h now
set $reboot sudo reboot
set $term urxvt
set $MON1 "$(sed '1!d' $HOME/.monitor)"
set $MON2 "$(sed '2!d' $HOME/.monitor)"

# Font for window titles.
font pango:System San Francisco 7


###---Dropdown/Scratchpad Windows---###
#tmux, $mod+u
for_window [instance="dropdown"] floating enable
for_window [instance="dropdown"] resize set 875 560
for_window [instance="dropdown"] move position center
for_window [instance="dropdown"] move scratchpad
exec --no-startup-id $term -name dropdown -e zsh

#tmux, $mod+b
for_window [instance="bot"] floating enable
for_window [instance="bot"] resize set 875 560
for_window [instance="bot"] move position center
for_window [instance="bot"] move scratchpad
exec --no-startup-id $term -name bot -e tmux

#Python, $mod+a
for_window [instance="math"] floating enable
for_window [instance="math"] resize set 1120 420
for_window [instance="math"] move position center
for_window [instance="math"] move scratchpad
exec --no-startup-id $term -fn "xft:mono:pixelsize=24" -name math -e python3 -q


###---Basic Bindings---###
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

bindsym $mod+Return exec urxvt

bindsym $mod+q		 			kill
bindsym $mod+Shift+q 				kill

bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+l focus up
bindsym $mod+oslash focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
# bindsym $mod+Shift+l move up
bindsym $mod+Shift+oslash move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+l [instance="math"] pkill

bindsym $mod+a					[instance="math"] scratchpad show; move position center
bindsym $mod+u					[instance="dropdown"] scratchpad show; move position center
bindsym $mod+b					[instance="bot"] scratchpad show; move position center

bindsym $mod+Shift+a				exec --no-startup-id $term -fn "xft:mono:pixelsize=24" -name math -e python3 -q
bindsym $mod+Shift+u				exec --no-startup-id $term -name dropdown -e zsh
bindsym $mod+Shift+b				exec --no-startup-id $term -name bot -e tmux attach

# split in horizontal orientation
bindsym $mod+h split h
bindsym $mod+Mod1+Up split h
bindsym $mod+Mod1+Right split h

# split in vertical orientation
bindsym $mod+v split v
bindsym $mod+Mod1+Down split v
bindsym $mod+Mod1+Left split v

# Fullscreen
bindsym $mod+f fullscreen toggle

