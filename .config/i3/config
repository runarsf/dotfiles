# Definitions
set $mod Mod4
set $hibernate sudo systemctl suspend
set $shutdown shutdown -h now
set $reboot sudo reboot
set $term st
set $font pango:System San Francisco

# Font for window titles.
#font pango:System San Francisco 7
font $font 7

###---Scratchpad Windows---###
# sc_math, $mod+a
for_window [instance="sc_math"] floating enable
for_window [instance="sc_math"] resize set 1120 420
for_window [instance="sc_math"] move position center
for_window [instance="sc_math"] move scratchpad
bindsym $mod+a				[instance="sc_math"] scratchpad show; move position center
bindsym $mod+Shift+a		exec --no-startup-id urxvt -fn "xft:mono:pixelsize=24" -name sc_math -e python
bindsym $mod+Shift+Mod1+a	exec --no-startup-id urxvt -fn "xft:mono:pixelsize=24" -name sc_math -e R

# sc_st, $mod+n
for_window [instance="sc_st"] floating enable
for_window [instance="sc_st"] resize set 1600 900
for_window [instance="sc_st"] move position center
for_window [instance="sc_st"] move scratchpad
bindsym $mod+n 			[instance="sc_st"] scratchpad show; move position center
bindsym $mod+Shift+n 	exec --no-startup-id $term -n sc_st -e zsh

###---Basic Bindings---###
floating_modifier $mod

bindsym $mod+Return exec $term

bindsym $mod+q			kill
bindsym $mod+Shift+q 	kill

bindsym $mod+j 		focus left
bindsym $mod+k 		focus down
bindsym $mod+l 		focus up
bindsym $mod+oslash focus right
bindsym $mod+Left 	focus left
bindsym $mod+Down 	focus down
bindsym $mod+Up 	focus up
bindsym $mod+Right 	focus right

bindsym $mod+Shift+j 		move left
bindsym $mod+Shift+k 		move down
bindsym $mod+Shift+l 		move up
bindsym $mod+Shift+oslash 	move right
bindsym $mod+Shift+Left 	move left
bindsym $mod+Shift+Down 	move down
bindsym $mod+Shift+Up 		move up
bindsym $mod+Shift+Right 	move right

# split in horizontal orientation
bindsym $mod+h 			split h
bindsym $mod+Mod1+Up 	split h
bindsym $mod+Mod1+Right split h

# split in vertical orientation
bindsym $mod+v 			split v
bindsym $mod+Mod1+Down 	split v
bindsym $mod+Mod1+Left 	split v

# Fullscreen
bindsym $mod+f fullscreen toggle

#bindsym $mod+s layout stacking
#bindsym $mod+t layout tabbed
#bindsym $mod+e layout toggle split

# tiling / floating
bindsym $mod+space 			floating toggle
bindsym $mod+Shift+space 	floating toggle

# reload the configuration file
bindsym $mod+Shift+i reload
# restart i3 inplace
bindsym $mod+Shift+r restart
# exit i3
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+e exec $HOME/bin/prompt.sh "You pressed the exit shortcut. Do you really want to exit i3?" "i3-msg exit"

# gap hotkeys
bindsym $mod+s							gaps inner current plus 5
bindsym $mod+Shift+s 					gaps inner current minus 5
bindsym $mod+z							gaps outer current plus 5
bindsym $mod+Shift+z 					gaps outer current minus 5

# show running applications
bindsym $mod+Tab exec rofi -show window

# lock and shutdown
bindsym $mod+x exec $HOME/bin/i3lock-custom.sh
bindsym $mod+Shift+x exec $HOME/bin/prompt.sh "Are you sure you want to shutdown?" "$shutdown"

#bindsym $mod+Shift+c exec puush -b
bindsym Mod1+p exec sharenix-section -n -c #sharenix-section

# simulated media keys
bindsym Ctrl+$mod+j exec --no-startup-id playerctl previous
bindsym Ctrl+$mod+k exec --no-startup-id playerctl play-pause
bindsym Ctrl+$mod+l exec --no-startup-id playerctl next

# media keys
bindsym XF86AudioPlay 	exec --no-startup-id playerctl play-pause
bindsym XF86AudioPause 	exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext 	exec --no-startup-id playerctl next
bindsym XF86AudioPrev 	exec --no-startup-id playerctl previous

# rofi
bindsym $mod+d exec rofi -show run -lines 3 -eh 2 -width 100 -padding 625 -opacity "50" -color-enabled -bw 0 -bc "$bg-color" -color-window "$bg-color" -fg "$text-color" -hlbg "$bg-color" -hlfg "#9575cd" -font "System San Francisco Display 18" #rofi

