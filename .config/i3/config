# Definitions
set $mod Mod4
set $hibernate sudo systemctl suspend
set $shutdown shutdown -h now
set $reboot sudo reboot
set $TERMINAL urxvt
set $font pango:System San Francisco

# Font for window titles.
#font pango:System San Francisco 7
font $font 7

###---Scratchpad Windows---###
# sc_math, $mod+a
for_window [instance="sc_math"] floating enable
for_window [instance="sc_math"] resize set 1120 420
for_window [instance="sc_math"] move position center
for_window [instance="sc_math"] move scratchpad
bindsym $mod+a				[instance="sc_math"] scratchpad show; move position center
bindsym $mod+Shift+a		exec --no-startup-id urxvt -fn "xft:mono:pixelsize=24" -name sc_math -e python3
bindsym $mod+Shift+Mod1+a	exec --no-startup-id urxvt -fn "xft:mono:pixelsize=24" -name sc_math -e R

# sc_st, $mod+n
for_window [instance="sc_st"] floating enable
for_window [instance="sc_st"] resize set 1600 900
for_window [instance="sc_st"] move position center
for_window [instance="sc_st"] move scratchpad
bindsym $mod+n 			[instance="sc_st"] scratchpad show; move position center
bindsym $mod+Shift+n 	exec --no-startup-id $TERMINAL -n sc_st -e zsh

# sc_stsmall, $mod+u
for_window [instance="sc_urxvt"] floating enable
for_window [instance="sc_urxvt"] resize set 1600 900
for_window [instance="sc_urxvt"] move position center
for_window [instance="sc_urxvt"] move scratchpad
bindsym $mod+u 			[instance="sc_urxvt"] scratchpad show; move position center
bindsym $mod+Shift+u 	exec --no-startup-id urxvt -name sc_urxvt -e zsh

# spotify, $mod+p
for_window [instance="spotify"] floating enable
for_window [instance="spotify"] resize set 800 1080
for_window [instance="spotify"] move position center
for_window [instance="spotify"] move scratchpad
bindsym $mod+p 			[instance="spotify"] scratchpad show; move position center
bindsym $mod+Shift+p 	exec --no-startup-id snap run spotify

bindsym Mod1+Right exec xdotool click 3
bindsym Mod1+Left exec xdotool click 1

