    ; (box :tooltip "Power" ; {{{
    ;   (click-left :var revealpower
    ;               :varname "revealpower"
    ;     (box
    ;       (button :onclick "notify-send asd" "asd"))
    ;     (label :text "â»"))) ; }}}
    (box :class "spaced" ; {{{
      (eventbox
        (hover-double :var revealtime
                      :varname "revealtime"
                      :class "condensed"
          (label :text "${date}-"
                 :style "padding: 0;")
          (label :text ":${seconds}"
                 :style "padding: 0;")
