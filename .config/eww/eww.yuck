; -*- mode: lisp -*-

; Variables {{{
(defvar eww "eww -c ~/.config/eww")
(defvar revealvol false)
(defvar revealbat false)
(defvar revealram false)
(defvar revealcpu false)
(defvar revealdisk false)
(defvar revealtime false)
(defvar reveallight false)
(defvar revealpower false)
(defvar revealpowera false)
(defvar revealpowerb false)
(defvar revealpowerc false)
; }}}

(defwindow bar ; {{{
  :monitor 0
  :windowtype "dock"
  :stacking "bg"
  :wm-ignore false
  :hexpand false
  :vexpand false
  :geometry (geometry :x "0%"
                      :y "10px"
                      :width "99%"
                      :height "35px" ; Has to be odd for pixel-perfect vertical centering
                      :anchor "top center")
  :reserve (struts :side "top"
                   :distance "45px")
  (bar))
; }}}

(defwidget bar [] ; {{{
  (centerbox :orientation "h"
    (workspaces)
    (info)
    (modules)))
; }}}

(defwidget workspaces [] ; {{{
  (bbox :halign "start"
    (bbox
      (eventbox
        :onscroll "modules/workspaces {}"
        (literal :class "container"
                 :content workspaces)))))
    ;(delim)))
(deflisten workspaces
  "modules/workspaces")
; }}}

(defwidget info [] ; {{{
  (bbox :class "info"
        :halign "center"
   {music != "" ? "üéµ ${music}" : "${title}"}))
; }}}

