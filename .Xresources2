! start of tested config
!! general settings
URxvt*scrollTtyKeypress:    true
URxvt*scrollWithBuffer:     true
URxvt*scrollTtyOutput:      false
URxvt*internalBorder:       0
URxvt*urgentOnBell:         true
URxvt*visualBell:           true
URxvt*loginShell:           true
URxvt*saveLines:            100
URxvt*lineSpace:            0

!! XFT settings
URxvt*letterSpace:          -1
Xft*autohint:               0
Xft*lcdfilter:              lcddefault
Xft*hintstyle:              hintslight
Xft*hinting:                full
Xft*antialias:              true
Xft*dpi:                    96
Xft*rgba:                   rgb
URxvt*font:                 xft:Iosevka Term:size=14

Xcursor*size:               15W
URxvt*clipboard.autocopy:   true
URxvt*scrollBar:            false
URxvt*depth:                32
URxvt*url-launcher:         $BROWSER
URxvt*matcher.button:       1

!! disable keycap picture insert mode
URxvt*iso14755:             false
URxvt*iso14755_52:          false

!! Extensions
URxvt*perl-lib:             ~/.config/.urxvt/ext/
URxvt*perl-ext-common:      keyboard-select,resize-font,url-select
URxvt*colorUL:              #4682B4

!! url-select
URxvt*keysum.M-u:           perl:url-select:select_next
URxvt*url-select.launcher:  $BROWSER
URxvt*url-select.underline: true

!! keyboard-select
URxvt*keysum.M-Escape:      perl:keyboard-select:activate

!! resize-font
URxvt*resize-font.smaller:  C-j
URxvt*resize-font.bigger:   C-k
