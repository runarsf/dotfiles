#!/usr/bin/env bash

if ! command -v "i3lock" "convert" "scrot" >/dev/null 2>&1; then
  printf "i3lock, imagemagick, and scrot are required to run this script.\n"
  exit 1
fi

PICTURE=/tmp/i3lock.png
ICON="${HOME}/.config/dotfiles/i3lock.png"
BLUR="0x9"

scrot "${PICTURE}"

#convert "${PICTURE}" -scale "10%" -scale "1000%" "${PICTURE}"
convert "${PICTURE}" -blur "${BLUR}" "${PICTURE}"
#convert "${PICTURE}" "${ICON}" -gravity center -composite -matte "${PICTURE}"

i3lock -i "${PICTURE}"

rm "${PICTURE}"
