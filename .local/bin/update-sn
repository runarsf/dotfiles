#!/usr/bin/env bash
rm -f ~/.local/bin/StandardNotes

tmpfile="$(mktemp sn-XXXXX.AppImage)"

curl -s https://api.github.com/repos/standardnotes/desktop/releases/latest \
  | grep "browser_download_url.*linux-x86_64\.AppImage" \
  | cut -d : -f 2,3 \
  | tr -d \" \
  | wget -qi -O "${tmpfile}" -

mv "${tmpfile}" ~/.local/bin/StandardNotes
chmod +x ~/.local/bin/StandardNotes
