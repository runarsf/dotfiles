#!/usr/bin/env bash

# Grab the latest release
url=$(
  curl --silent https://api.github.com/repos/standardnotes/desktop/releases/latest \
    | grep "browser_download_url.*linux-x86_64\.AppImage" \
    | cut -d : -f 2,3 \
    | tr -d \"
) && rm -f ~/.local/bin/StandardNotes

curl --location --output ~/.local/bin/StandardNotes ${url}

chmod +x ~/.local/bin/StandardNotes
