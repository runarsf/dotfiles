#!/bin/sh

handle () {
  if test -f "${1}"; then
    highlight --out-format ansi --force "${1}" || cat "${1}";;
  elif test -d "${1}"; then
    tree "${1}" -La 1
  fi
}

case "${1}" in
  *.png|*.jpg|*.jpeg|*.mkv|*.mp4|*.m4v|*.bmp|*.xpm) mediainfo "${1}";;
  *.tar.gz|*.tgz) tar -ztvf "${1}";;
  *.tar.bz2|*.tbz2) tar -jtvf "${1}";;
  *.tar.txz|*.txz) xz --list "${1}";;
  *.tar) tar -tvf "${1}";;
  *.zip|*.jar|*.war|*.ear|*.oxt) unzip -l "${1}";; # zipinfo
  *.rar) unrar l "${1}";;
  *.7z) 7z l "${1}";;
  *.md) glow -s dark "${1}";;
  *.pdf) pdftotext "${1}" -;;
  *.odt,*.ods,*.odp,*.sxw) odt2txt "${1}";;
  *.docx) docx2txt "${1}" -;;
  *.doc) catdoc "${1}";;
  *.csv) cat "${1}" | sed s/,/\\n/g;;
  *.html|*.xml) w3m -dump "${1}";;
  *.zsh*|*.bash*|*.git*) pistol "${1}";;
  *.[1-8]) man "${1}" | col -b ;;
  *.o) nm "${1}" | less;;
  *.torrent) transmission-show "${1}";;
  *.iso) iso-info --no-header -l "${1}";;
  *) handle "${1}" ;;
esac
